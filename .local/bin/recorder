#!/bin/bash
dir=~/Movies/Recordings
file=$dir/recording_$(date +"%Y-%m-%d_%H:%M:%S.mp4")
[ -d "$dir" ] || mkdir -pv "$dir"

is_recorder_running() {
    pgrep -x wf-recorder >/dev/null
}

toggle_recorder() {
    if is_recorder_running; then
        kill $(pgrep -x wf-recorder) && notify-send "Recording saved "
    else
        notify-send "Recording in 5 seconds "
        sleep 5
        wf-recorder -f $file
    fi
}

toggle_recorder
